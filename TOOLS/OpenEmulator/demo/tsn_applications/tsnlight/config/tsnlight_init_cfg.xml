<?xml version="1.0" encoding="utf-8"?>
<network_init_cfg>
	<!-- 标签中的值全部用16进制主机序表示-->

	<!-- 节点0-->
	<tsnlight> 
		<tsnlight_mid>6</tsnlight_mid>   <!-- TSNLight的mid地址-->
	</tsnlight>	
	<!-- 节点0-->
	<node> 
		<hcp_mid>0</hcp_mid>   <!-- 交换机的本地dmid地址，16进制主机序-->
		<tsmp_forward_table>  <!-- 交换机的dmid转发表-->         
			<entry> <!-- 同步应用主机转发表-->
				<dmid>6</dmid> 
				<outport>4</outport>  
			</entry> 
            <entry> <!-- 控制器转发表-->
				<dmid>2</dmid> 
				<outport>1</outport>  
			</entry>
			<entry> <!-- 同步应用主机转发表-->
				<dmid>3</dmid> 
				<outport>2</outport>  
			</entry> 	
			<entry> <!-- 同步应用主机转发表-->
				<dmid>1</dmid> 
				<outport>8</outport>  
			</entry> 	
			<entry> <!-- 同步应用主机转发表-->
				<dmid>4</dmid> 
				<outport>8</outport>  
			</entry> 		
			<entry> <!-- 同步应用主机转发表-->
				<dmid>5</dmid> 
				<outport>8</outport>  
			</entry>		
			<entry> <!-- 同步应用主机转发表-->
				<dmid>7</dmid> 
				<outport>4</outport>  
			</entry>			
		</tsmp_forward_table>
	</node>

	<!-- 节点1-->
	<node> 
		<hcp_mid>1</hcp_mid>   <!-- 交换机的本地dmid地址，16进制主机序-->
		<tsmp_forward_table>  <!-- 交换机的dmid转发表-->         
			<entry> <!-- 同步应用主机转发表-->
				<dmid>6</dmid> 
				<outport>8</outport>  
			</entry> 
            <entry> <!-- 控制器转发表-->
				<dmid>2</dmid> 
				<outport>8</outport>  
			</entry>
			<entry> <!-- 同步应用主机转发表-->
				<dmid>3</dmid> 
				<outport>8</outport>  
			</entry> 	
			<entry> <!-- 同步应用主机转发表-->
				<dmid>0</dmid> 
				<outport>8</outport>  
			</entry> 	
			<entry> <!-- 同步应用主机转发表-->
				<dmid>4</dmid> 
				<outport>1</outport>  
			</entry> 		
			<entry> <!-- 同步应用主机转发表-->
				<dmid>5</dmid> 
				<outport>2</outport>  
			</entry>
			<entry> <!-- 同步应用主机转发表-->
				<dmid>7</dmid> 
				<outport>4</outport>  
			</entry>				
		</tsmp_forward_table>
	</node>

	<!-- 节点2-->
	<node> 
		<hcp_mid>2</hcp_mid>   <!-- 交换机的本地dmid地址，16进制主机序-->
	</node>

	<node> 
		<hcp_mid>3</hcp_mid>   <!-- 交换机的本地dmid地址，16进制主机序-->
	</node>

	<node> 
		<hcp_mid>4</hcp_mid>   <!-- 交换机的本地dmid地址，16进制主机序-->
	</node>

	<node> 
		<hcp_mid>5</hcp_mid>   <!-- 交换机的本地dmid地址，16进制主机序-->
	</node>	
</network_init_cfg>


